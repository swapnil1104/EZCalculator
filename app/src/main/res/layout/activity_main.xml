<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/oldExp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_weight=".2"
        android:gravity="right|bottom"
        android:text=""
        android:textColor="@android:color/black" />


    <EditText
        android:id="@+id/field"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight=".3"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="bottom|right"
        android:textSize="@dimen/abc_text_size_display_3_material"
        android:singleLine="true" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".5"
            android:orientation="horizontal"
            android:padding="0dp"
            android:paddingBottom="0dip">

            <Button
                android:id="@+id/btnClear"
                style="@style/button_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:background="@drawable/dark_gray"
                android:onClick="clear"
                android:text="ac"
                android:textSize="40dp"
                android:typeface="normal"
                android:layout_gravity="top" />

            <Button
                android:id="@+id/button"
                style="button_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:background="@drawable/dark_gray"
                android:text="("
                android:textSize="40dp"
                android:typeface="normal"
                android:onClick="setOpenPa" />

            <Button
                android:id="@+id/btnDel"
                style="@style/button_text"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"

                android:layout_weight="1"
                android:background="@drawable/dark_gray"
                android:text=")"
                android:textSize="40dp"
                android:typeface="normal"
                android:onClick="setClosePa" />

            <Button
                android:id="@+id/divide"
                style="@style/button_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/orange_button"
                android:onClick="setSlash"
                android:text="รท"
                android:textSize="40dp"
                android:textStyle="normal"
                android:typeface="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/field"
            android:layout_centerInParent="true"
            android:layout_weight="1.5"
            android:longClickable="false"
            android:measureWithLargestChild="false"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"

            android:padding="0dp"
            android:paddingBottom="0dip"
            android:paddingTop="0dip">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|top"

                android:orientation="vertical"
                android:padding="0dp">

                <Button
                    android:id="@+id/one"
                    style="@style/button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_button"
                    android:onClick="setOne"
                    android:text="1"
                    android:textSize="40dp"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/four"
                    style="@style/button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_button"
                    android:onClick="setFour"
                    android:text="4"
                    android:textSize="40dp"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/seven"
                    style="@style/button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_button"
                    android:onClick="setSeven"
                    android:text="7"
                    android:textSize="40dp"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/zero"
                    style="@style/button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_weight="1"
                    android:background="@drawable/gray_button"
                    android:onClick="setZero"
                    android:text="0"

                    android:textSize="40dp"
                    android:typeface="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center|top"
                android:orientation="vertical"
                android:padding="0dp">

                <Button
                    android:id="@+id/two"
                    style="@style/button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_button"
                    android:onClick="setTwo"
                    android:text="2"
                    android:textSize="40dp"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/five"
                    style="@style/button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_button"
                    android:onClick="setFive"
                    android:text="5"
                    android:textSize="40dp"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/eight"
                    style="@style/button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_button"
                    android:onClick="setEight"
                    android:text="8"

                    android:textSize="40dp"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/button2"
                    style="@style/button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/gray_button"
                    android:onClick="setDecimal"
                    android:text="."
                    android:textSize="40dp"
                    android:typeface="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center|top"
                android:orientation="vertical"
                android:padding="0dp">

                <Button
                    android:id="@+id/three"
                    style="@style/button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_button"
                    android:onClick="setThree"
                    android:text="3"
                    android:textSize="40dp"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/six"
                    style="@style/button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_button"
                    android:onClick="setSix"
                    android:text="6"
                    android:textSize="40dp"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/nine"
                    style="@style/button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_button"
                    android:onClick="setNine"
                    android:text="9"
                    android:textSize="40dp"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/openPa"
                    style="@style/button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    android:background="@drawable/gray_button"
                    android:onClick="delText"
                    android:text="&lt;-"
                    android:textSize="40dp"
                    android:typeface="normal"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center|top"
                android:orientation="vertical"
                android:padding="0dp">

                <Button
                    android:id="@+id/multiply"
                    style="@style/button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/orange_button"
                    android:onClick="setStar"
                    android:text="*"
                    android:capitalize="none"
                    android:textSize="40dp"
                    android:typeface="normal" />


                <Button
                    android:id="@+id/minus"
                    style="@style/button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/orange_button"
                    android:onClick="setMinus"
                    android:text="-"
                    android:textSize="40dp"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/add"
                    style="@style/button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/orange_button"
                    android:onClick="setPlus"
                    android:text="+"
                    android:textSize="40dp"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/btnCalculate"
                    style="@style/button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"

                    android:layout_weight="1"
                    android:background="@drawable/orange_button"
                    android:onClick="setCalculate"
                    android:text="="
                    android:textSize="40dp"
                    android:typeface="normal" />


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
